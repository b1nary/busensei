%h1
  %span.mdi.mdi-comment-question-outline
  Japanese Proverbs
- if user_signed_in?
  = link_to 'New Kanji', new_kanji_path
= paginate @kanjis
- @kanjis.each_slice(3) do |row|
  .row
    - row.each do |kanji|
      .col-sm-4
        = link_to kanji do
          .card
            -# %h5.card-header
            -#   %span.mdi.mdi-translate
            -#   = kanji.category
            .card-block
              %h2= kanji.word
              %p
                = kanji.reading
              %p
                = kanji.english
              %p
                = kanji.notes
              - if user_signed_in?
                %td= link_to 'Edit', edit_kanji_path(kanji)
                %td= link_to 'Destroy', kanji, :method => :delete, :data => { :confirm => 'Are you sure?' }
= paginate @kanjis
