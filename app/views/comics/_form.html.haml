= simple_form_for(@comic, multipart: true) do |f|
  - if @comic.errors.any?
    #error_explanation
      %h2= "#{pluralize(@comic.errors.count, "error")} prohibited this comic from being saved:"
      %ul
        - @comic.errors.full_messages.each do |msg|
          %li= msg
  = f.input :title
  = f.input :image, as: :file
  = f.input :blurb, as: :text
  = f.button :submit
